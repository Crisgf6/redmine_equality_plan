<div class="splitcontentleft">
  <h2><%= l(:label_leave_of_absence) %></h2>
  <canvas id="leaveOfAbsenceChart" width="100" height="100"></canvas>
</div>

<script>
  var ctxleaveOfAbsenceChart = document.getElementById('leaveOfAbsenceChart').getContext('2d');

  data = {
      datasets: [{
          data: [<%= User.female.worker_on_leave.size %>, <%= User.male.worker_on_leave.size %>],
          backgroundColor: ['#FF333F','#4633FF']
      }],
      // These labels appear in the legend and in the tooltips when hovering different arcs
      labels: [
          '<%= l(:label_female) %>',
          '<%= l(:label_male) %>'
      ]
  };

  var myPieChart = new Chart(ctxleaveOfAbsenceChart, {
      type: 'pie',
      data: data,
      options: {
          elements: {
            rectangle: {borderWidth: 2}
          },
          responsive: true,
          legend: {position: 'right'},
          title: {
            display: true,
            text: '<%= l(:label_leave_of_absence) %>'
          }
        }
  });

</script>
